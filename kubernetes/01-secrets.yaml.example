apiVersion: v1
kind: Secret
metadata:
  name: wordpress-db-secret
  namespace: wordpress
type: Opaque
stringData:
  # Database credentials for Cloud SQL
  # CHANGE THESE VALUES!
  DB_USER: "wordpress"
  DB_PASSWORD: "CHANGE-ME-STRONG-PASSWORD"  # Generate: openssl rand -base64 32
  DB_NAME: "wordpress"

  # Connection info
  DB_HOST: "127.0.0.1:3306"  # Via Cloud SQL Proxy - don't change
  INSTANCE_CONNECTION_NAME: "YOUR_PROJECT:YOUR_REGION:YOUR_INSTANCE"  # Example: my-project:asia-southeast2:wordpress-db